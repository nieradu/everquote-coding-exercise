    "version": "0.2.0",
    "configurations": [{
        "cwd": "${workspaceRoot}",
        "name": "Debug",
        "type": "node",
        "request": "launch",
        "args": [],
        "env": {
            "NODE_ENV": "development"
        },
        "outFiles": ["${workspaceRoot}\\dist\\**\\*.js"],
        "program": "${workspaceFolder}\\src\\index.ts",
        "skipFiles": ["<node_internals>/**"],
        "runtimeArgs": ["--nolazy", "-r", "ts-node/register"],
        "sourceMaps": true,
        "preLaunchTask": "build",
        "console": "integratedTerminal",
        "protocol": "inspector",
        "runtimeExecutable": null,
        "stopOnEntry": false,

    }]
}